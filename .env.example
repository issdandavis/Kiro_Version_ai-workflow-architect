# Environment Variables for AI Workflow Platform
# Copy this file to .env and fill in your values

# === DATABASE (REQUIRED) ===
# PostgreSQL connection string
# For Supabase: postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres
# For local: postgresql://postgres:password@localhost:5432/ai_workflow_db
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_workflow_db

# Session secret - generate a random 32+ character string
SESSION_SECRET=your-secret-key-here-min-32-chars-random-string

# Your app's URL (used for CORS and redirects)
APP_ORIGIN=http://localhost:5000

# Port configuration
PORT=3000

# Environment mode
NODE_ENV=development

# === AI PROVIDERS (add the ones you want to use) ===
# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic Claude - https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# xAI Grok - https://console.x.ai/
XAI_API_KEY=xai-...

# Perplexity - https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-...

# Google AI (Gemini) - https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=AI...

# Groq - https://console.groq.com/keys
GROQ_API_KEY=gsk_...

# === STRIPE INTEGRATION (for payments - optional) ===
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# === GOOGLE DRIVE INTEGRATION (optional) ===
GOOGLE_DRIVE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_DRIVE_REFRESH_TOKEN=your-refresh-token

# === OTHER INTEGRATIONS (optional) ===
# GitHub - https://github.com/settings/tokens
GITHUB_TOKEN=ghp_...

# Notion - https://www.notion.so/my-integrations
NOTION_TOKEN=secret_...

# Dropbox - https://www.dropbox.com/developers/apps
DROPBOX_ACCESS_TOKEN=sl.B...

# OneDrive/Microsoft Graph
ONEDRIVE_ACCESS_TOKEN=your-microsoft-graph-token

# === FIGMA MCP (optional) ===
MCP_FIGMA_URL=http://localhost:3001

# === ADMIN (optional) ===
ADMIN_EMAIL=admin@yourcompany.com
